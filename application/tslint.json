{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended"],
  "rules": {
    "array-type": [true, "array"],
    "arrow-parens": [true, "ban-single-arg-parens"],
    "arrow-return-shorthand": true,
    "ban-comma-operator": true,
    "ban-types": [true, ["Object"], ["Promise"]],
    "binary-expression-operand-order": true,
    "callable-types": true,
    "class-name": true,
    "comment-format": [true, "check-space"],
    "component-class-suffix": true,
    "curly": true,
    "cyclomatic-complexity": true,
    "deprecation": {
      "severity": "error"
    },
    "directive-class-suffix": true,
    "encoding": true,
    "eofline": true,
    "file-name-casing": [true, "kebab-case"],
    "forin": true,
    "import-blacklist": [true, "rxjs/Rx"],
    "import-spacing": true,
    "indent": [true, "spaces"],
    "interface-name": [true, "never-prefix"],
    "interface-over-type-literal": true,
    "label-position": true,
    "max-classes-per-file": [true, 1],
    "max-file-line-count": [true, 500],
    "max-line-length": [true, 140],
    "member-access": true,
    "member-ordering": [
      true,
      {
        "order": ["instance-field", "instance-method", "static-field", "static-method"]
      }
    ],
    "no-angle-bracket-type-assertion": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-boolean-literal-compare": true,
    "no-conditional-assignment": true,
    "no-console": [true, "debug", "info", "log", "time", "timeEnd", "trace"],
    "no-construct": true,
    "no-debugger": true,
    "no-default-export": true,
    "no-duplicate-imports": true,
    "no-duplicate-super": true,
    "no-duplicate-switch-case": true,
    "no-dynamic-delete": true,
    "no-empty": true,
    "no-empty-interface": true,
    "no-eval": true,
    "no-for-in-array": true,
    "no-inferrable-types": false,
    "no-inferred-empty-object-type": true,
    "no-input-rename": true,
    "no-invalid-template-strings": true,
    "no-magic-numbers": true,
    "no-misused-new": true,
    "no-non-null-assertion": true,
    "no-object-literal-type-assertion": true,
    "no-output-on-prefix": true,
    "no-output-rename": true,
    "no-parameter-reassignment": true,
    "no-redundant-jsdoc": true,
    "no-require-imports": true,
    "no-shadowed-variable": true,
    "no-sparse-arrays": true,
    "no-string-literal": true,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": true,
    "no-unbound-method": true,
    "no-unnecessary-callback-wrapper": true,
    "no-unnecessary-initializer": true,
    "no-unnecessary-type-assertion": true,
    "no-unused-expression": false,
    "no-unused-imports": false,
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "no-var-requires": true,
    "object-literal-key-quotes": false,
    "object-literal-shorthand": true,
    "object-literal-sort-keys": true,
    "one-line": [true, "check-catch", "check-else", "check-open-brace", "check-whitespace"],
    "only-arrow-functions": true,
    "ordered-imports": true,
    "prefer-conditional-expression": true,
    "prefer-const": true,
    "prefer-for-of": false,
    "prefer-function-over-method": [true, "allow-public", "allow-protected"],
    "prefer-object-spread": true,
    "prefer-readonly": true,
    "prefer-template": [true, "allow-single-concat"],
    "quotemark": [true, "single"],
    "radix": true,
    "restrict-plus-operands": true,
    "return-undefined": true,
    "semicolon": [true, "always", "ignore-bound-class-methods"],
    "switch-default": true,
    "switch-final-break": true,
    "trailing-comma": false,
    "triple-equals": true,
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "property-declaration",
      "variable-declaration",
      "member-variable-declaration",
      "object-destructing",
      "array-destructing"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "unified-signatures": true,
    "use-host-property-decorator": true,
    "use-input-property-decorator": true,
    "use-isnan": true,
    "use-life-cycle-interface": true,
    "use-output-property-decorator": true,
    "use-pipe-transform-interface": true,
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"],
    "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-separator", "check-type"]
  },
  "rulesDirectory": ["node_modules/codelyzer"]
}
