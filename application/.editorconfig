root = true
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120
quote_type = single
curly_bracket_next_line = true
spaces_around_operator = true
spaces_around_brackets = inside
indent_brace_style = K&R
[*.md]
max_line_length = off
trim_trailing_whitespace = false
