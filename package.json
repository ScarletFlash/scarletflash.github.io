{
  "name": "@repo_/root",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "🏗️": "Building",
    "build": "npm run turbo build",
    "build_watch": "npm run turbo build_watch",
    "🤖": "Static Analysis",
    "compiler_check": "npm run turbo compiler_check",
    "💅": "Formatting",
    "formatter_check": "npm run turbo formatter_check",
    "formatter_check:root": "prettier --config ./lib-configurations/prettier/base.yaml --check ./*.*",
    "formatter_fix": "npm run turbo run formatter_fix",
    "formatter_fix:root": "prettier --config ./lib-configurations/prettier/base.yaml --write ./*.*",
    "🥷": "Stuff",
    "turbo": "turbo --parallel --env-mode=strict"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "~5.4.0",
    "typescript-eslint": "8.0.0-alpha.20",
    "prettier": "^3.0.0",
    "eslint": "^9.0.0",
    "@types/node": "^20.0.0"
  },
  "workspaces": [
    "application/",
    "lib-*/"
  ],
  "packageManager": "npm@10.0.0"
}
